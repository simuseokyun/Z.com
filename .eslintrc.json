{
  "root": true, // 이 설정 파일이 프로젝트의 최상위 ESLint 설정 파일임을 명시
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"], // 추가적인 ESLint 플러그인 목록
  // TypeScript ESLint parser를 위한 옵션
  "parserOptions": {
    "project": "./tsconfig.json", // TypeScript 설정 파일의 경로 지정
    "createDefaultProgram": true // 프로젝트 파일을 찾을 수 없는 경우 기본 프로그램 생성
  },
  // 코드가 실행될 환경 정의
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ignorePatterns": ["node_modules/"], // ESLint가 무시할 파일이나 디렉토리 패턴
  // ESLint 규칙 설정 확장
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier" // Prettier와 충돌하는 ESLint 규칙 비활성화
  ],
  // 프로젝트에서 커스터마이즈한 규칙 정의
  "rules": {
    "react/jsx-props-no-spreading": 0, // JSX에서 props spreading 허용
    "react/jsx-filename-extension": ["warn", { "extensions": [".ts", ".tsx"] }] // 경고를 설정하며 .ts와 .tsx 확장자를 허용함
  }
}
